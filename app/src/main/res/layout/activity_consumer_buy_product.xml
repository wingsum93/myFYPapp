<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/activity_consumer_buy_product_txv_consumer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        
        android:lines="1"
        android:text="@string/title_activity_consumer_buy_product_username"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/activity_consumer_buy_product_listview"
        android:layout_width="fill_parent"
        android:layout_height="209dp"
        android:layout_weight="1" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/activity_consumer_buy_product_bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_consumer_buy_product_bt1" />

        <Button
            android:id="@+id/activity_consumer_buy_product_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_consumer_buy_product_bt2" />

        <Button
            android:id="@+id/activity_consumer_buy_product_bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_consumer_buy_product_bt3" />

    </LinearLayout>

</LinearLayout>
